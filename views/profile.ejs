<% include partials/header.ejs %>


    <div class="row">
       
              <!-- Sidebar Widgets Column -->
              <div class="col-md-4 ">
      
      
                <!-- Categories Widget -->
                <div class="card my-4">
                  <h5 class="card-header">Нийтлэгч</h5>
                  <div class="card-body">
                    <div class="row ">
                      <div class="col-lg-12 ">
                         <img class="img-fluid rounded" src="/upload/user/<%=auther.image%>" alt="" style="margin-left: 15%">
                      </div>
                    </div>
                    <div class="row" style="margin-top:5px">
                      <div class="col-lg-12">
                        <ul class="list-unstyled mb-0">
                          <li>Овог
                            <a href="#"><%= auther.last_name%></a>
                          </li>
                          <li>Нэр
                            <a href="#"><%= auther.first_name%></a>
                          </li>
                          <li>цахим шуудан
                            <a href="#"><%= auther.email%></a>
                          </li>
                          <li>Утасны дугаар
                            <a href="#"><%= auther.phone%></a>
                          </li>
                          
                        </ul>
                      </div>
                    </div>
                    <% if(user){ if(auther.id==user.id){%>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="nav nav-tabs flex-column" id="myTab" role="tablist">
                                <li class="nav-item">
                                  <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Хувийн мэдээлэл</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Зарын мэдээлэл</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"> </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <%}}%>

                  </div>
                </div>
      
              </div>

              <div class="col ">
                <% if(user){ if(auther.id==user.id){%>
                  <div class="row">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                          .home..
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="row">
                                <% article.forEach(function(a){ %>
                                  <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-top:10px">
                                      <div class="card h-100">
                                          <a href="/article/<%=a.id %>"><img class="card-img-top" src="/upload/<%=a.image%>" alt=""></a>
                                          <div class="card-body">
                                          <h5 class="card-title">
                                              <a href="/article/<%=a.id %>"><%=a.name%></a>
                                          </h5>
                                          <p class="card-text"><%=a.about%></p>
                                          </div>
                                          <div class="row" style=" margin:auto ; margin-bottom: 5px">
                                              <% if(user.email==auther.email){%>
                                                <a href="/article/edit/<%= a.id %>" style="  margin-right:5px ; ">    
                                                  <button type="submit" class="btn btn-primary">edit</button>
                                              </a>
                                              <a href="/article/delete/<%= a.id %>">    
                                                  <button type="submit" class="btn btn-danger delete-article" data-id="<%= article.id %>">delete</button>
                                              </a>
                                            <%}%>
                                          </div>
                                      </div>
                                  </div>
                              <% }); %>   
                            </div>
  
                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                          ...
                        </div>
                      </div>
                </div>
                  
                  <% }} else {%>
                    <div class="row">
                      <% article.forEach(function(a){ %>
                          <div class="col-lg-4 col-sm-6 portfolio-item" style="margin-top:10px">
                              <div class="card h-100">
                                  <a href="/article/<%=a.id %>"><img class="card-img-top" src="/upload/<%=a.image%>" alt=""></a>
                                  <div class="card-body">
                                  <h5 class="card-title">
                                      <a href="/article/<%=a.id %>"><%=a.name%></a>
                                  </h5>
                                  <p class="card-text"><%=a.about%></p>
                                  </div>
                                  <div class="row">
                                          <div class="col" style="text-align: center" >
                                                  <a><span class="fa fa-star checked" > 3</span></a>
                                          </div>
                                          <div class="col">
                                              <h4><b>₮ </b><%=a.price%></h4>
                                          </div>
                                      </div>
                              </div>
                          </div>
                      <% }); %>   
                  </div>
                  <% }%>
              </div>
   
    </div>


<% include partials/footer.ejs %>
    